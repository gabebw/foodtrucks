<% if @trucks.empty? %>
  <h2>No food trucks available for lunch today :(</h2>
<% else %>
  <h2>Lunch trucks near Downtown Crossing today</h2>
  <p>(Sorted by rough distance from thoughtbot)</p>
  <table>
    <thead>
      <tr>
        <th align="left">Name</th>
        <th align="left">Twitter</th>
        <th align="left">Location</th>
      </tr>
    </thead>
    <tbody>
      <% @trucks.each do |truck| %>
        <tr>
          <td>
            <% if truck.data[:menu] %>
              <a href="<%= truck.data[:menu] %>"><%= truck.name %></a>
            <% else %>
              <%= truck.name %>
            <% end %>
          </td>

          <td>
            <% if truck.data[:twitter] %>
              <a href="https://twitter.com/<%= truck.data[:twitter]%>">
                <i class="icon-twitter-bird"></i>
              </a>
            <% end %>
          </td>

          <td>
            <%= truck.humanized_location %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
