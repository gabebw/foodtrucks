<% if @trucks.empty? %>
  <h2>No food trucks available for lunch today :(</h2>
<% else %>
  <h2>Lunch trucks near Downtown Crossing today</h2>
  <p>(Sorted by rough distance from thoughtbot)</p>
  <table>
    <thead>
      <tr>
        <th align="left">Name</th>
        <th align="left">Twitter</th>
        <th align="left">Location</th>
      </tr>
    </thead>
    <tbody>
      <% @trucks.each do |truck| %>
        <tr>
          <td>
            <%= truck.name_with_menu %>
          </td>

          <td>
            <%= truck.twitter_link %>
          </td>

          <td>
            <%= truck.humanized_location %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
